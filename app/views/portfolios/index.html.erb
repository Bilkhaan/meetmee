<h1>Listing portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Client</th>
      <th>Services</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <td><%= portfolio.title %></td>
        <td><%= portfolio.description %></td>
        <td><%= portfolio.image_url %></td>
        <td><%= portfolio.client %></td>
        <td><%= portfolio.services %></td>
        <td><%= link_to 'Edit', edit_profile_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', profile_portfolio_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

